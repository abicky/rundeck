{
    "compilerOptions": {
        "outDir": "lib",
        "baseUrl": ".",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "target": "es2018",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "typeRoots": [
            "webpack-env",
            "src/types"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/components/**/*",
        "./src/stories/**/*"
    ]
}
